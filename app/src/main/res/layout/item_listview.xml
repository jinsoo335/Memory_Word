<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:layout_marginTop="0px"
    android:layout_marginBottom="0px">

<!--    android:descendantFocusability="blocksDescendants"-->
    <!--
        리스트뷰 아이템
    -->

    <TextView
        android:id="@+id/wood_block"
        android:layout_width="20dp"
        android:layout_height="48dp"
        android:background="#bc6661" />

    <TextView
        android:id="@+id/listname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="listname"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="18dp"

        />


    <ImageView
        android:id="@+id/del_view"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:src="@drawable/del_img" />

    <Button
        android:id="@+id/show_list_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="0dp"
        android:text="단어장\n 보기"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="@drawable/button_border"
        android:fontFamily="@font/logofont"/>



    <Button
        android:id="@+id/quiz_page_Meanbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="뜻\nQuiz"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="0dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/logofont"
        />

    <Button
        android:id="@+id/quiz_page_Spellingbtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="스펠링\nQuiz"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="0dp"
        android:background="@drawable/button_border"
        android:fontFamily="@font/logofont"
        />


</LinearLayout>