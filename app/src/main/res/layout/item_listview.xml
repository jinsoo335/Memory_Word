<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

<!--    android:descendantFocusability="blocksDescendants"-->
    <!--
        리스트뷰 아이템
    -->

    <ImageView
        android:id="@+id/wood_block"
        android:layout_marginLeft="0px"
        android:layout_width="200px"
        android:layout_height="200px"
        app:srcCompat="@drawable/setting_icon"
        />

    <TextView
        android:id="@+id/listname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="listname"
        android:textSize="20pt"
        />

    <TextView
        android:id="@+id/listsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="size"
        android:textSize="20pt"
        />

    <Button
        android:id="@+id/show_list_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리스트 보기" />




    <Button
        android:id="@+id/quiz_page_Meanbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뜻\nQuiz"
        android:textSize="4pt"
        android:padding="0dp"
        />

    <Button
        android:id="@+id/quiz_page_Spellingbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스펠링\nQuiz"
        android:textSize="4pt"
        android:padding="0dp"
        />


</LinearLayout>