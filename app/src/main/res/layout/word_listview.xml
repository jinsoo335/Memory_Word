<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!--    android:descendantFocusability="blocksDescendants"-->
    <!--
        리스트뷰 아이템
    -->
    <TextView
        android:id="@+id/word_wood_block"
        android:layout_width="20dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:background="#bc6661" />

    <LinearLayout
        android:id="@+id/word_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/spelling_text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Spelling"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/logofont"/>

        <TextView
            android:id="@+id/mean_text"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="bottom"
            android:text="mean"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/logofont"/>


    </LinearLayout>


    <View
        android:id="@+id/empty_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/word_delete_view"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:src="@drawable/del_img"
        android:layout_marginRight="20dp"
        />


</LinearLayout>